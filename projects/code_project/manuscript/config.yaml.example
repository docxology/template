# Code Project Configuration Template
# Copy this file to config.yaml and customize for your project
# This file serves as a meta-artifact linking the prose of the manuscript to the execution
# layer. It is directly read by `infrastructure/core/config_loader.py`.

# Consumed by: `infrastructure/rendering/pdf_renderer.py`
paper:
  # Follow the RASP standard: titles must be objective and descriptive
  title: "Your Optimization Research Title"
  subtitle: "Optional Subtitle"
  version: "1.0"
  date: ""  # Auto-generated by `infrastructure/validation/output_validator.py` if empty

# Consumed by: `infrastructure/publishing/extract_publication_metadata.py`
authors:
  - name: "Your Name"
    orcid: "0000-0000-0000-0000"  # Get from https://orcid.org/
    email: "your.email@university.edu"
    affiliation: "Your University"
    corresponding: true

# Optional: Multiple authors
#  - name: "Co-Author Name"
#    orcid: "0000-0000-0000-0000"
#    email: "coauthor@university.edu"
#    affiliation: "Co-Author University"
#    corresponding: false

# Consumed by: `infrastructure/publishing/publish_to_zenodo.py` 
publication:
  doi: ""  # Add when formally published
  journal: ""
  volume: ""
  pages: ""
  year: ""

keywords:
  - "optimization"
  - "algorithms"
  - "machine learning"

metadata:
  license: "Apache-2.0"
  language: "en"

# Consumed by: `infrastructure/llm/client.py` and `infrastructure/llm/agent.py`
llm:
  reviews:
    enabled: false  # Set to true to enable LLM-powered reviews
    types:
      - executive_summary  # Default
      # - quality_review
      # - methodology_review
      # - improvement_suggestions
  translations:
    enabled: false  # Set to true to enable automated translations
    languages:
      - zh  # Default: Chinese Simplified

# Consumed by: `infrastructure/reporting/pipeline_reporter.py` and CI/CD gates
testing:
  max_test_failures: 0
  max_infra_test_failures: 0
  max_project_test_failures: 0