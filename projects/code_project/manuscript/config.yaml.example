# Small Code Project Configuration Template
# Copy this file to config.yaml and customize for your project

paper:
  title: "Your Optimization Research Title"
  subtitle: "Optional Subtitle"
  version: "1.0"
  date: ""  # Auto-generated if empty

authors:
  - name: "Your Name"
    orcid: "0000-0000-0000-0000"  # Get from https://orcid.org/
    email: "your.email@university.edu"
    affiliation: "Your University"
    corresponding: true

# Optional: Multiple authors
#  - name: "Co-Author Name"
#    orcid: "0000-0000-0000-0000"
#    email: "coauthor@university.edu"
#    affiliation: "Co-Author University"
#    corresponding: false

publication:
  doi: ""  # Add when published
  journal: ""
  volume: ""
  pages: ""
  year: ""

keywords:
  - "optimization"
  - "algorithms"
  - "machine learning"

metadata:
  license: "Apache-2.0"
  language: "en"

# LLM Review Settings
llm:
  reviews:
    enabled: false  # Set to true to enable LLM-powered reviews
    types:
      - executive_summary  # Default: single review
      # Uncomment to enable additional reviews:
      # - quality_review
      # - methodology_review
      # - improvement_suggestions
  translations:
    enabled: false  # Set to true to enable translations
    languages:
      - zh  # Default: Chinese Simplified
      # Uncomment to enable additional languages:
      # - hi  # Hindi
      # - ru  # Russian

# Testing Configuration
testing:
  max_test_failures: 0
  max_infra_test_failures: 0
  max_project_test_failures: 0