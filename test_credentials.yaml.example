# Test Credential Configuration
# Copy this file to test_credentials.yaml and fill in values
# DO NOT commit test_credentials.yaml to version control!

# Zenodo configuration
zenodo:
  # Use sandbox for tests (strongly recommended)
  use_sandbox: true
  
  # API URLs
  sandbox_url: "https://sandbox.zenodo.org/api"
  production_url: "https://zenodo.org/api"
  
  # Tokens (loaded from environment variables)
  sandbox_token: "${ZENODO_SANDBOX_TOKEN}"
  production_token: "${ZENODO_PROD_TOKEN}"

# GitHub configuration
github:
  # API URL
  api_url: "https://api.github.com"
  
  # Credentials (loaded from environment variables)
  token: "${GITHUB_TOKEN}"
  repository: "${GITHUB_REPO}"
  
  # Test release tag pattern
  test_tag_prefix: "test-release-"

# arXiv configuration
arxiv:
  # Enable arXiv submission tests (optional)
  enabled: false
  
  # Credentials (loaded from environment variables)
  username: "${ARXIV_USERNAME}"
  password: "${ARXIV_PASSWORD}"
  
  # SWORD API endpoint
  api_url: "https://arxiv.org/sword-app"

# Test cleanup settings
cleanup:
  # Automatically delete test depositions/releases after tests
  auto_cleanup: true
  
  # Keep test artifacts for debugging
  keep_artifacts: false
  
  # Maximum age of test artifacts before auto-cleanup (hours)
  max_age_hours: 24

# Network settings
network:
  # Retry configuration for API calls
  max_retries: 3
  retry_delay: 1.0
  
  # Timeout for API calls (seconds)
  timeout: 30

