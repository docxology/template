[run]
branch = True
source = 
    infrastructure
    project/src

[report]
omit =
    **/tests/*
    **/site-packages/*
    **/test_*.py
fail_under = 70
show_missing = True
precision = 2

# Coverage configuration for both infrastructure and project tests
# fail_under = 70 aligns with actual project target of ~82% coverage
# Coverage includes:
#   - infrastructure/ (generic build/validation tools)
#   - project/src/ (project-specific scientific code)
# For complete coverage details, see: AGENTS.md#coverage-system
# See also: docs/BUILD_SYSTEM.md for coverage analysis
