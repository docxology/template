[run]
branch = True
source = src

[report]
omit =
    **/tests/*
    **/site-packages/*
fail_under = 70
show_missing = True
precision = 2

# Note: fail_under = 70 aligns with actual project target of ~82% coverage
# Current coverage: 81.90%
# This requirement ensures consistent quality while accounting for real-world code complexity
# For complete coverage details, see: AGENTS.md#coverage-system
# See also: docs/BUILD_SYSTEM.md for coverage analysis
